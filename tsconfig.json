{
	"compilerOptions": {
		"moduleResolution": "node",
		"module": "esnext",
		"target": "es5",
		"lib": ["ESNext", "DOM"],
		"jsx": "react",
		"noImplicitAny": true,
		"strictNullChecks": true,
		"preserveConstEnums": true,
		"sourceMap": false,
		"importHelpers": true,
		"outDir": "dist/",
		"esModuleInterop": true,
    	"allowSyntheticDefaultImports": true,
	},
	"include": ["src/**/*"],
	"exclude": [
		"node_modules",
		"**/*.spec.ts",
		"**/*.test.tsx",
		"**/*.test.ts",
		"**/__snapshots__"
	]
}
